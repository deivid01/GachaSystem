{
    "name": "gacha-system",
    "private": true,
    "version": "2.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:gh": "vite build --base=/GachaSystem/ && npm run generate-404",
        "generate-404": "node -e \"require('fs').copyFileSync('dist/index.html','dist/404.html')\"",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "server": "tsx server/index.ts",
        "dev:full": "concurrently \"npm:server\" \"npm:dev\""
    },
    "dependencies": {
        "framer-motion": "^11.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.25",
        "@types/node": "^20.19.30",
        "@types/prop-types": "^15.7.15",
        "@types/react": "^18.3.0",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitejs/plugin-react": "^4.3.0",
        "concurrently": "^8.2.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "eslint": "^8.57.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "express": "^5.2.1",
        "ts-node-dev": "^2.0.0",
        "tsx": "^4.21.0",
        "typescript": "^5.4.0",
        "undici": "^7.18.2",
        "vite": "^5.2.0"
    }
}